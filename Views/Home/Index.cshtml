@model HomeModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    

    <form asp-action="Index" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <div class="col-md-5">
                <h1>Subscription</h1>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5">
                Hi, @Model.Username .<br/>
                To use this service, you need to register to our Linux clusters.<br/>
                Enter your Linux password and subscribe. 
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5">
                <input asp-for="LinuxPassword" class="form-control" />
                <span asp-validation-for="LinuxPassword" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-5">
                <input type="submit" class="btn btn-primary" value="Subscribe" />
            </div>
        </div>

    </form>

</div>

